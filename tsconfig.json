{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "noLib": false,
        "outDir": "./dist",  
        "lib": [
            "dom",
            "es5",
            "scripthost",
            "es2015.promise"
        ],
        "preserveConstEnums": true,
        "sourceMap": true,
        "jsx": "react",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node",
            "react",
            "react-dom",
            "sharepoint",
            "jest"
        ]
    }
}
